{% extends '::admin.html.twig' %}
{% block title %}Administration Publication{% endblock %}

{% block body %}
<!-- CONTENT BOX - DATATABLE -->
<div class="content-box">
  <div class="box-body">
    <div class="box-header clear">
      <h2>Publication's Administration</h2>
    </div>
    <div class="box-wrap clear">
      <!-- DATA-TABLE JS PLUGIN -->
      <div id="data-table">
	<p>In this place you can edit information about 2sn's publication</p>
	<form method="post" action="">
	  <table class="style1 datatable">
	    <thead>
	      <tr>
		<th class="bSortable"><input type="checkbox" class="checkbox select-all" /></th>
		<th>Username</th>
		<th>Date</th>
		<th>Contents</th>
		<th>Access</th>
		<th>Actions</th>
	      </tr>
	    </thead>
	    <tbody>
	      {% for publication in publications %}
   	      <tr>
		<td><input type="checkbox" class="checkbox" /></td>
		<td>{{publication.user.username}}</td>
		<td>{{publication.date|date('Y-m-d') }}</td>
		<td>{{publication.content}}</td>
		<td>{{publication.access.value}}</td>
		<td></td>

		<td>
		  <a href="tables.html#"><img src="{{ asset('bundles/ssn/images/ico_edit_16.png') }}" class="icon16 fl-space2" alt="" title="edit" /></a>
		  <a href="tables.html#"><img src="{{ asset('bundles/ssn/images/ico_delete_16.png') }}" class="icon16 fl-space2" alt="" title="delete" /></a>
		  <a href="tables.html#"><img src="{{ asset('bundles/ssn/images/ico_settings_16.png') }}" class="icon16 fl-space2" alt="" title="settings" /></a>
		</td>
	      </tr>
	      {% endfor %}
	  </table>
	</form>
      </div><!-- /#table -->
    </div><!-- end of box-wrap -->
  </div> <!-- end of box-body -->
</div> <!-- end of content-box -->
{% endblock %}
